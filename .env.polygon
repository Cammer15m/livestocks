# Polygon.io Data Fetcher Configuration
# Copy this to .env or modify as needed

# Polygon.io API Configuration
POLYGON_API_KEY=ObYzcj_rvlU1czNwYLmRZJgg7TXWAX5q
POLYGON_API_NAME=Default

# Database Configuration (matches existing PostgreSQL setup)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=chinook
DB_USER=postgres
DB_PASSWORD=postgres

# Stock Tickers to Monitor (comma-separated)
DEFAULT_TICKERS=AAPL,GOOGL,MSFT,TSLA,AMZN

# Data Fetching Configuration
FETCH_INTERVAL_MINUTES=60
DAYS_BACK_INITIAL=30
MAX_RETRIES=3
RETRY_DELAY_SECONDS=30

# Data Types to Fetch (true/false)
ENABLE_REALTIME=false
ENABLE_DAILY_AGGREGATES=true
ENABLE_MINUTE_AGGREGATES=false
ENABLE_TRADES=false
ENABLE_QUOTES=false

# API Rate Limiting (Free tier: 5 requests per minute)
REQUESTS_PER_MINUTE=5
